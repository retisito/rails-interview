# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://rails:your_secure_database_password_here@postgres:5432/rails_interview_production

# Rails Configuration
SECRET_KEY_BASE=your_very_long_secret_key_base_generate_with_rails_secret
RAILS_ENV=production
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Optional: Redis Configuration
REDIS_URL=redis://redis:6379/0

# Optional: Email Configuration (if using ActionMailer)
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=yourdomain.com
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Optional: External Services
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-west-2
# AWS_S3_BUCKET=your-bucket-name

# Security
ALLOWED_HOSTS=localhost,yourdomain.com,your-server-ip
